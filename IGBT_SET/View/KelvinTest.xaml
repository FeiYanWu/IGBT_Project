<UserControl x:Class="IGBT_SET.View.KelvinTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGBT_SET.View"
             mc:Ignorable="d" 
              d:DesignHeight="220" d:DesignWidth="1150">
    <Grid x:Name="Kelvin_view">
        <CheckBox  Style="{StaticResource CheckBoxStyle}"  Height="28"  TabIndex="1" Content="IGBT_1_C" HorizontalAlignment="Left" Margin="275,26,0,0"  VerticalAlignment="Top" Checked="CheckBox_Checked"/>
